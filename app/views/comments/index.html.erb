<p style="color: green"><%= notice %></p>
<h1>Comments</h1>
<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", comment %>
    </p>
  <% end %>
</div>
<%= link_to "New comment", new_comment_path %>
<%= tag.div id: "load_more_button" do %>
  <%= button_to "More...", pagy_url_for(@pagy, @pagy.next) %>
<% end %>